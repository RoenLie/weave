{
	"name": "@roenlie/infinite-scroller",
	"description": "Infinite scroller base component.",
	"authors": "Kristoffer Roen-Lie",
	"version": "1.0.0",
	"type": "module",
	"types": "./dist/infinite-scroller.d.ts",
